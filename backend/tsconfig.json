{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts", // Include all TypeScript files in the src directory
    "src/types/**/*.d.ts" // Ensure TypeScript picks up all declaration files
  ]
}